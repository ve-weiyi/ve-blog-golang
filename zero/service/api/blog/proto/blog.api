syntax = "v1"

import "blog/login.api"
import "blog/account.api"
import "blog/article.api"
import "blog/category.api"
import "blog/tag.api"
import "blog/website.api"
import "blog/photo.api"
import "blog/photo_album.api"
import "blog/talk.api"
import "blog/friend_link.api"
import "blog/comment.api"
import "blog/remark.api"
import "blog/chat.api"
import "blog/websocket.api"

type (
	PingReq  {}
	PingResp {
		Env         string   `json:"env"`
		Name        string   `json:"name"`
		Version     string   `json:"version"`
		Runtime     string   `json:"runtime"`
		Description string   `json:"description"`
		RpcStatus   []string `json:"rpc_status"`
	}
)

@server (
	prefix: /api/v1
)
service blog-api {
	@doc "ping"
	@handler Ping
	get /ping (PingReq) returns (PingResp)
}

